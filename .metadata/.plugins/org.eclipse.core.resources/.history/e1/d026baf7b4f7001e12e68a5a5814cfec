package chapter01;

public class IntegerVariable {

	public static void main(String[] args) {
		
		short sVal = 10;
		byte bVal = 20;
		
		int result = sVal + bVal; // byte가 short로 바뀜
								// int 로 바뀌어서 저장됨
		
		// result = sVal + (short)bVal; // 굳이 명시적 형변환 한 거
		
		System.out.println("두 수의 합 : "+result);

	}

}
