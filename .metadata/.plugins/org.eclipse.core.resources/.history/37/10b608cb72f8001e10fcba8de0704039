package chapter02;

public class Test {

	public static void main(String[] args) {
		// Q1 바이트 크기가 작은 자료형을 더 큰 자료형으로
		// 대입하는 자동형변환 코드 2가지 구현
		
		System.out.println("Q1");
		
		System.out.println("> Case 1");
		byte q1_byte = 125;
		short q1_short = q1_byte;
		System.out.println("> Case 1" + q1_short);
		
		System.out.println("> Case 2");
		int q1_int = 123123123;
		float q1_float = q1_int;
		System.out.println("> Case 2" + q1_float);
		
		System.out.println("=================");
		
		// Q2 실수를 정수형 변수에 대입하는 경우, 형변환이 
		// 자동으로 수행되고 소수점 이하 부분이 소실되는 형변환 
		// 코드 2가지 구현 
		
		System.out.println("Q2");
		
		System.out.println("> Case 1");
		double real_case1 = 20.5;
		int integer_case1 = (int) real_case1;
		System.out.println("Case 1 result: " + integer_case1);
		
		System.out.println("> Case 2");
		float real_case2 = 1002.1233423f;
		short integer_case2 = (short) real_case2;
		System.out.println("Case 2 result: " + integer_case2);

		System.out.println("=================");
		
		// Q3 변수 2개를 선언해 각각 10과 2.5를 대입하고 두 변수의 사칙연산
		// 결과를 정수로만 출력
		
		System.out.println("Q3");
		
		int x = 10; 
		double y = 2.5;
		
		System.out.println("x + y = " + (int)(x + y));
		System.out.println("x - y = " + (int)(x - y));
		System.out.println("x * y = " + (int)(x * y));
		System.out.println("x / y = " + (int)(x / y));
		
		System.out.println("=================");
		
		
		

	}

}
